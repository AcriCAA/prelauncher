%title Prelauncher
%meta{:content => "", :name => "Description"}/
%meta{:content => "", :name => "Keywords"}/

%link{:href => asset_path('favicon.ico'), :rel => "shortcut icon", :type => "image/x-icon"}/
%link{:href => asset_path('favicon.ico'), :rel => "apple-touch-icon", :type => "image/jpeg"}/
%meta{:content => "#{Setting.sharing[:facebook_title]}", :property => "og:title"}/
%meta{:content => "#{Setting.sharing[:facebook_message]}", :property => "og:description"}/

- if Setting.facebook_image.present?
	%meta{:content => Setting.facebook_image.url, :property => "og:image"}/
	%meta{:content => "570", :property => "og:image:width"}/
	%meta{:content => "300", :property => "og:image:height"}/


- if controller_name != "users"
	%meta{:content => (params[:ref] ? root_url + "users/" + params[:ref] : root_url), :property => "og:url"}/

- else
	%meta{:content => request.original_url, :property => "og:url"}/


%meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
